@page
@model QuizApp.Pages.Questions.CreateModel

@{
ViewData["Title"] = "Create";
}

<h1>Create Question</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Question.Text" class="control-label">Question</label>
        <input asp-for="Question.Text" class="form-control" />
        <span asp-validation-for="Question.Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Answers</label>
        @for (int i = 0; i < Model.Answers.Count; i++)
        {
        <div>
            <input type="text" asp-for="Answers[i].Text" class="form-control" />
            <input type="checkbox" asp-for="Answers[i].IsCorrect" /> Correct
            <span asp-validation-for="Answers[i].Text" class="text-danger"></span>
            <input type="hidden" asp-for="Answers[i].Id" />
        </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
