@page
@model QuizApp.Pages.Questions.DeleteModel
@{
    ViewData["Title"] = "Delete Question";
}

<h1>Delete Question</h1>

<h3>Are you sure you want to delete this question?</h3>

<div>
    <h4>@Model.Question.Text</h4>
    @foreach (var t in Model.Question.Answers)
    {
        <div>
            <p type="text" asp-for="Question.Answers[i].Text">@t.Text</p>
        </div>
    }
</div>

<form method="post">
    <input type="hidden" asp-for="Question.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>